@model IEnumerable<DetailDebtViewModel>
<table class="table table-bordered table-striped table-hover no-footer">
    <thead>
        <tr class="warning">
            <th style="width:5%">
                STT
            </th>
            <th style="width:20%">
               @Html.DisplayNameFor(model => model.OrderCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loai)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
             <th>
                 @Html.DisplayNameFor(model => model.RemainingAmountAccrued)
            </th>
         </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int i = 0;
            foreach (var item in Model)
            {
                i++;
                <tr>
                    <td class="text-center">
                        @i
                    </td>
                     <td class="text-left" style="width:60px">
                        @Html.DisplayFor(modelItem => item.OrderCode)
                    </td>
                    <td class="text-center" style="width:60px">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td class="text-left">
                          @Html.DisplayFor(modelItem => item.Loai)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.RemainingAmountAccrued)
                    </td>
                </tr>
            }   
        }
        else
        {
            <tr>
                <td colspan="6" class="color-red text-center">Không có hoá đơn nào cho kết quả tìm kiếm này..</td>
            </tr>
        }
    </tbody>
</table>
