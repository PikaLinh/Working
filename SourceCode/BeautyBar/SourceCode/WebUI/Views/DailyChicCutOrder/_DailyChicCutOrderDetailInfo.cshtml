@model List<Daily_ChicCut_OrderDetailViewModel>
<form id="frmList" action="Save" method="post">
    <input type="hidden" name="SumCOGSOfOrderDetail" id="ViewBagCOGSOfOrder" />
    <input type="hidden" name="SumPriceOfOrderDetail" id="ViewBagSumPrice" />
    <input type="hidden" name="TotalBillDiscount" id="ViewBagTotalBillDiscount" />
    <input type="hidden" name="Total" id="ViewBagTotal" />
    <div class="form-horizontal">
        <table id="tblOrderDetail" class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="warning">
                    <th style="width:40px" class="text-center">STT</th>
                    <th style="width:100px; text-align:center;">Dịch vụ</th>
                    <th style="width:110px">Giá</th>
                    <th style="width:100px">Số lượng</th>
                    <th style="width:130px">TT</th>
                    <th style="width:130px">Ghi chú</th>
                    <th style="width:100px"></th>
                </tr>
            </thead>
            <tbody style="max-height:200px; overflow:scroll">
                @Html.Partial("_DailyChicCutOrderDetailInnerInfo", Model)
            </tbody>
            <tfoot>
                <tr>
                    <td class="text-right" colspan="4"><strong>Tổng cộng:</strong></td>
                    <td class="text-right" colspan="3" id="SumPrice">
                        0
                    </td>
                </tr>
                <tr>
                    <td class="text-right" colspan="4"><strong>Giảm giá:</strong></td>
                    <td class="text-right" colspan="3">
                        <div class="input-group">
                            <input type="text" name="BillDiscount" id="BillDiscount" class="form-control text-right" value="@TempData["BillDiscount"]" />
                            <span class=" input-group-addon">
                                <select name="BillDiscountTypeId" id="BillDiscountTypeId" style="border: 0px; background-color: #eee;">
                                    <option value="2">%</option>
                                    <option value="1" @(TempData["BillDiscountTypeId"] != null && (int)TempData["BillDiscountTypeId"] == 1 ? "selected" : "")>$</option>
                                </select>
                            </span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="text-right" colspan="4"><strong>Tổng cộng thành tiền:</strong></td>
                    <td class="text-right" colspan="3" id="TotalPrice"></td>
                </tr>
            </tfoot>
        </table>
    </div>
</form>

