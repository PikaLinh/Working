@model EntityModels.ExchangeModel

@{
    ViewBag.Title = "Xem chi tiết";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.SteelFIId)
    @Html.HiddenFor(model => model.SteelMarkId)
    @Html.HiddenFor(model => model.UnitId)
    <h3> @ViewBag.Title</h3>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 col-sm-3 col-xs-12 control-label">@Html.DisplayNameFor(model => model.SteelMarkId)</label>
        <span class="col-md-10 col-sm-9 col-xs-12 control-label text-left">
            @Html.DisplayFor(model => model.SteelMarkModel.Code)
        </span>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 col-sm-3 col-xs-12 control-label">@Html.DisplayNameFor(model => model.SteelFIId)</label>
        <span class="col-md-10 col-sm-9 col-xs-12 control-label text-left">
            @Html.DisplayFor(model => model.SteelFIModel.Code)
        </span>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 col-sm-3 col-xs-12 control-label">@Html.DisplayNameFor(model => model.UnitId)</label>
        <span class="col-md-10 col-sm-9 col-xs-12 control-label text-left">
            @Html.DisplayFor(model => model.UnitModel.UnitName)
        </span>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 col-sm-3 col-xs-12 control-label">@Html.DisplayNameFor(model => model.Value)</label>
        <span class="col-md-10 col-sm-9 col-xs-12 control-label text-left">
            @Html.DisplayFor(model => model.Value)
        </span>
    </div>
     <div class="form-group">
        <span class="col-md-offset-2  col-sm-offset-3 col-md-10 col-sm-9 col-xs-12 control-label text-left">
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default btn-sm  custom-button minw100" })
            @Html.ActionLink("Sửa", "Edit", new { SteelMarkId = Model.SteelMarkId, SteelFIId = Model.SteelFIId, UnitId = Model.UnitId }, new { @class = "btn btn-default btn-sm  custom-button btn-warning minw100" })
        </span>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
