@model IEnumerable<EntityModels.ExchangeModel>

@{
    ViewBag.Title = "Quản lý quy đổi";
}


<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead>
        <tr class="warning">
            <th class="text-center">
                TT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SteelMarkModel.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SteelFIModel.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitModel.UnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th class="actions text-center" style="width:220px">@Resources.LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SteelMarkModel.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SteelFIModel.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitModel.UnitName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Xem", "Details", new { SteelMarkId = item.SteelMarkId, SteelFIId = item.SteelFIId, UnitId = item.UnitId }, new { @class = "btn btn-default btn-sm" })
                    @Html.ActionLink("Sửa", "Edit", new { SteelMarkId = item.SteelMarkId, SteelFIId = item.SteelFIId, UnitId = item.UnitId }, new { @class = "btn btn-default btn-warning btn-sm" })
                    @Html.ActionLink("Xóa", "Delete", new { SteelMarkId = item.SteelMarkId, SteelFIId = item.SteelFIId, UnitId = item.UnitId }, new { @class = "btn btn-default btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p class="text-right has-btn-add-new" style="margin-top: 4px;">
    @Html.ActionLink("Thêm mới quy đổi", "Create", null, new { @class = "btn btn-default btn-warning" })
</p>