@model EntityModels.PaymentMethodModel

@{
    ViewBag.Title = "Xem chi tiết";
}
<hr class="custom">
<div class="dxpnlControl_Metropolis" style="font-family:Helvetica;font-size:14px;width:100%;">
    <div class="row head">
        <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">@ViewBag.Title</h4></div>
    </div>
    <hr class="custom">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PaymentMethodId)
        <div class="form-group">
            @Html.LabelFor(model => model.PaymentMethodName, new { @class = "col-md-3 col-sm-3 col-xs-12 control-label" })
            <div class="col-md-4 col-sm-4 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.PaymentMethodName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Actived, new { @class = "col-md-3 col-sm-3 col-xs-12 control-label" })
            <div class="col-md-4 col-sm-4 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.Actived)
            </div>
        </div>
        <hr class="custom">
        <div class="form-horizontal col-md-offset-3 col-sm-offset-3">            
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default custom-button minw100" })
            @Html.ActionLink("Sửa", "Edit", new { id = Model.PaymentMethodId }, new { @class = "btn btn-warning custom-button minw100" })
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}