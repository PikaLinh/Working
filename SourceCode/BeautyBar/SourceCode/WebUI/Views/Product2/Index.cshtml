@model IEnumerable<EntityModels.ProductModel>
@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<hr class="custom">
<div class="row head">
    <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">@ViewBag.Title</h4></div>
</div>
<hr class="custom">
<table class="table table-hover dataTable table-bordered table-striped no-footer" >
    <thead>
        <tr class="warning">
            <th class="text-center">
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginOfProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationOfProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductStatusId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var item in Model)
	    {
            i++;
		 <tr>
             <td>
                 @i
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.ProductCode)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.ProductName)
             </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryModel.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginOfProductModel.OriginOfProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationOfProductModel.LocationOfProductName)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.ProductStatusModel.ProductStatusName)
                </td>
                <td>
                    @Html.ActionLink("Xem", "Details", new { id = item.ProductId }, new { @class="btn btn-default col-sm"})
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductId }, new { @class="btn btn-warning col-sm"})
                </td>
		 </tr>
	    }
    </tbody>
</table>
<p class="text-right has-btn-add-new" style="margin-top: 4px;">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default btn-warning" })
</p>