@model List<ReturnDetailViewModel>

<form id="frmList" action="Save" method="post">
    <input type="hidden" name="SumPriceOfOrderDetail" id="ViewBagSumPrice" />
    <input type="hidden" name="TotalPrice" id="ViewBagTotalPrice" />
    <input type="hidden" name="TotalBillDiscount" id="ViewBagTotalBillDiscount" />
    <input type="hidden" name="TotalVAT" id="ViewBagTotalVAT" />

    <input type="hidden" name="TotalQty" id="ViewBagTotalQty" />
    <input type="hidden" name="TotalShippingWeight" id="ViewBagTotalShippingWeight" />
    <div class="form-horizontal">
        <table id="tblImportDetail" class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="warning">
                    <th style="width: 40px" class="text-center">STT</th>
                    <th style="width: 250px">Sản phẩm</th>
                    <th style="width: 110px">Giá</th>
                    <th style="width: 100px">Phí vận chuyển</th>
                    <th style="width: 50px">Số lượng nhập</th>
                    <th style="width: 50px">Số lượng đã trả</th>
                    <th style="width: 50px">Số lượng tồn kho</th>
                    <th style="width: 50px">Số lượng trả</th>
                    <th style="width: 200px">Thành tiền</th>
                    <th style="width: 50px">Trọng lượng</th>
                    <th style="width: 100px">Lý do</th>
                </tr>
            </thead>
            <tbody id="contentCreateListInner">
                @Html.Partial("_CreateListInner", Model)
            </tbody>
            <tfoot>
                <tr>
                    <td class="text-right" colspan="8"><strong>Tổng cộng:</strong></td>
                    <td class="text-right" id="SumPrice">0
                    </td>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td class="text-right" colspan="8"><strong>Giảm giá:</strong></td>
                    <td class="text-right" style="width: 100px;">
                        <div class="input-group">
                            <input type="text" name="ManualDiscount" id="ManualDiscount" class="form-control text-right" />
                            <span class=" input-group-addon">
                                <select name="ManualDiscountType" style="border: 0px; background-color: #eee;">
                                    <option value="CASH">$</option>
                                    <option value="PERCENT" selected="selected">%</option>
                                </select>
                            </span>
                        </div>
                    </td>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td class="text-right" colspan="8"><strong>VAT(%):</strong></td>
                    <td class="text-right">
                        <input type="text" name="VATValue" id="VATValue" class="form-control text-right" />
                    </td>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td class="text-right" colspan="8"><strong>Tổng cộng thành tiền:</strong></td>
                    <td class="text-right" id="TotalPrice"></td>
                    <td colspan="2"></td>
                </tr>
                <tr id="divGuestAmountPaid">
                    <td class="text-right" colspan="8">
                        <strong>Số tiền trả ngay:</strong>
                    </td>
                    <td class="text-right">
                        <input type="text" class="form-control text-right" id="GuestAmountPaid" name="GuestAmountPaid" />
                    </td>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td class="text-right" colspan="8"><strong>Số tiền còn lại:</strong></td>
                    <td class="text-right" id="RemainingAmount2">
                        <span></span>
                    </td>
                    <td colspan="2">
                        <input type="hidden" class="form-control text-right" id="RemainingAmount" name="RemainingAmount" /></td>
                </tr>
                @*<tr>
                    <td class="text-right" colspan="8"><strong>Mở rộng:</strong></td>
                    <td class="text-left">
                        <select name="CreateReceipt" class="form-control">
                            <option value="1">Tự động tạo phiếu thu</option>
                            <option value="0">Không tạo phiếu thu</option>
                        </select>
                    </td>
                    <td colspan="2"></td>
                </tr>*@
            </tfoot>
        </table>
    </div>
</form>
