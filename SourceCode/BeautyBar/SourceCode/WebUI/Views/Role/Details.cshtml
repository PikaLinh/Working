@model EntityModels.RolesModel

@{
    ViewBag.Title = "Xem chi tiết";
}

<hr class="custom">
<div class="dxpnlControl_Metropolis" style="font-family:Helvetica;font-size:14px;width:100%;">
    <div class="row head">
        <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">@ViewBag.Title</h4></div>
    </div>
    <hr class="custom">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.RolesId)
        @Html.HiddenFor(model => model.Code)
        <div class="form-group">
            @Html.LabelFor(model => model.Code, new { @class = "col-md-3 col-sm-3 col-xs-12 control-label" })
            <div class="col-md-5 col-sm-5 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.Code)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RolesName, new { @class = "col-md-3 col-sm-3 col-xs-12 control-label" })
            <div class="col-md-5 col-sm-5 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.RolesName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.OrderBy, new { @class = "col-md-3 col-sm-3 col-xs-12 control-label" })
            <div class="col-md-5 col-sm-5 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.OrderBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Actived, new { @class = "col-md-3 col-sm-3 col-xs-12 control-label" })
            <div class="col-md-5 col-sm-5 col-xs-12 control-label text-left">
                @if (Model.Actived == true)
                {
                    <i class="glyphicon glyphicon-ok"></i>
                }
                else
                {
                    <i class="glyphicon glyphicon-remove"></i>
                }
            </div>
        </div>
        <hr class="custom">
        <div class="form-horizontal ">
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default custom-button minw100" })
            @Html.ActionLink("Sửa", "Edit", new { id = Model.RolesId}, new { @class = "btn btn-warning custom-button minw100" })
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}