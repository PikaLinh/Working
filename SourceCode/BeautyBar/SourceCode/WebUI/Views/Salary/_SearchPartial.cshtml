@model IEnumerable<SalaryDetailViewModel>
<input type="hidden" name="TotalRow" id="TotalRow" value="@ViewBag.TotalRow" /> 
<table class="table table-bordered table-striped table-hover dataTable no-footer" id="datatableListWarehouse" style="width:100%">
    <thead>
        <tr class="warning">
            <th style="width:2%">
                STT
            </th>
            <th style="width:28%">
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Tip)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Commission)
            </th>
            <th class="text-center" style="width:5%">
                @Html.DisplayNameFor(model => model.TotalOfSalary)
            </th>
            <th class="actions text-center" style="width:25%">@Resources.LanguageResource.Actions</th>
    </thead>
    <tbody>
        @{ int i = 0;
            //int i = ViewBag.RowIndex;}
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center" style="width:2%">
                    @i
                </td>
                <td class="text-left" style="width:28%">
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td class="text-center" style="width:20%">
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td class="text-center" style="width:10%">
                    @Html.DisplayFor(modelItem => item.Tip)
                </td>
                <td style="width:10%">
                    @Html.DisplayFor(modelItem => item.Commission)
                </td>
                <td class="text-right" style="width:5%">
                    @Html.DisplayFor(modelItem => item.TotalOfSalary)
                </td>
                <td class="text-center" style="width:25%"></td>
            </tr>
        }
    </tbody>
</table>

