@model IEnumerable<ViewModels.ServiceCategoryViewModel>
<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead>
        <tr class="warning">
            <th class="text-center">
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceParentCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="actions text-center">@Resources.LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ServiceParentCategoryName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OrderBy)
                </td>
                <td class="text-center">
                    @if (item.Actived == true)
                    {
                        <i class="glyphicon glyphicon-ok"></i>
                    }
                    else
                    {
                        <i class="glyphicon glyphicon-remove"></i>
                    }
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Xem", "Details", new { id = item.ServiceCategoryId }, new { @class = "btn btn-default btn-sm" })
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ServiceCategoryId }, new { @class = "btn btn-default btn-warning btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>


