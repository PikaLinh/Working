@model ChangePasswordViewModel
<div id="modalEditPassword">   
    <hr class="custom">            
    <div class="row head">
        <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">Đổi mật khẩu</h4></div>
    </div>
    <hr class="custom">
    <div class="modal-body">
        <div id="alertMessage1">
            @if (ViewBag.DisplayErrorMessage == true)
            {
                <div class="@ViewBag.CssClass">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>@ViewBag.SortMessage !</strong> @ViewBag.Message 
                </div>
            }
        </div>
           @using (Html.BeginForm("EditPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", @id = "frmEditPassword" }))
            { 
               @Html.AntiForgeryToken()
               @Html.ValidationSummary(true)
                @Html.Hidden("UserId")
                @Html.Hidden("Password","123")
               <div class="input-area">
                   <div class="row-fluid">
                       <div class="span12">
                           <div class="control-group">
                               <label class="control-label">
                                   @Resources.LanguageResource.AccountModel_UserName

                               </label>
                               <div class="controls">
                                   @Html.TextBox("txtUserName", (string)ViewBag.UserName, new { @class = " form-control", @disabled = "disabled" })
                               </div>
                           </div>
                       </div>
                   </div>
            
     
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="NewPassword">
                                    @Resources.LanguageResource.AccountModel_NewPassword (*)

                                </label>
                                <div class="controls">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = " form-control" })
                                    <div style="color:red">@Html.ValidationMessageFor(model => model.NewPassword)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="retypeNewPassword">
                                    @Resources.LanguageResource.AccountModel_RetypeNewPassword (*)

                                </label>
                                <div class="controls">
                                    @Html.PasswordFor(model => model.retypeNewPassword, new { @class = " form-control" })
                                    <div style="color:red">@Html.ValidationMessageFor(model => model.retypeNewPassword)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               <div class="modal-footer text-center" >                  
                   @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default custom-button minw100" })
                   <a id="btnEditPassword" class="btn btn-default custom-button btn-warning minw100">@Resources.LanguageResource.Save</a>
                </div>
           }
    </div>

    
</div>

