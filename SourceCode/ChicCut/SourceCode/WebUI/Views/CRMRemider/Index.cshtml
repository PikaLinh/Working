@model IEnumerable<CRMRemiderViewModel>
@{
    ViewBag.Title = "Danh sách thông báo - nhắc nhở";
}

<hr class="custom">
<div class="row head">
    <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">@ViewBag.Title</h4></div>
</div>
<hr class="custom">
<table class="table table-hover dataTable table-bordered table-striped no-footer">
    <thead>
        <tr class="warning">
            <th class="text-center">
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjectId)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.ObjectType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actived)
            </th>
            <th class="actions text-center">@Resources.LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjectType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.RemiderName)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.LastDateRemind)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextDateRemind)
                </td>*@
                <td class="text-center">
                    @if (item.Actived == true)
                    {
                        <i class="glyphicon glyphicon-ok"></i>
                    }
                    else
                    {
                        <i class="glyphicon glyphicon-remove "></i>
                    }
                </td>
                <td class="text-center">
                    @Html.ActionLink("Xem", "Details", new { id = item.RemiderId }, new { @class = "btn btn-default col-sm" })
                    @Html.ActionLink("Sửa", "Edit", new { id = item.RemiderId }, new { @class = "btn btn-warning col-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p class="text-right has-btn-add-new" style="margin-top: 4px;">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default btn-warning" })
</p>

