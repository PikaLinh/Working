@model CRM_SMSTemplateModel
@{
    ViewBag.Title = "Chỉnh sửa mẫu Email";
}
<hr class="custom">
<div class="dxpnlControl_Metropolis" style="font-family: Helvetica; font-size: 14px; width: 100%;">
    <div class="row head">
        <div class="col-md-3 col-sm-12 col-xs-12">
            <h4 style="color: #6BABDF;">@ViewBag.Title</h4>
        </div>
    </div>
    <hr class="custom">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmHeader" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SMSTemplateId)
        @Html.Hidden("CheckReferenced")
        <div class="form-group">
            <div class="panel panel-default" style="min-height: 195px;">
                <div class="panel-body form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 col-sm-2 col-xs-12 control-label">
                            @Html.RequiredLabelFor(model => model.SMSTemplateName)
                        </div>
                        <div class="col-md-10 col-sm-10 col-xs-12 control-label">
                            <table class="dxeTextBoxSys dxeTextBox_Metropolis dxeTextBoxDefaultWidthSys text-with-line">
                                <tbody>
                                    <tr>
                                        <td class="dxic" style="width: 100%;">
                                            @Html.TextBoxFor(m => m.SMSTemplateName, new { @class = "dxeEditArea_Metropolis dxeEditAreaSys fullLineTextbox" })
                                            @Html.ValidationMessageFor(model => model.SMSTemplateName)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2 col-sm-2 col-xs-12 control-label">
                            @Html.RequiredLabelFor(model => model.SMSContent)
                        </div>
                        <div class="col-md-10 col-sm-10 col-xs-12 control-label">
                            <table class="dxeTextBoxSys dxeTextBox_Metropolis dxeTextBoxDefaultWidthSys text-with-line">
                                <tbody>
                                    <tr>
                                        <td class="dxic" style="width: 100%;">
                                            @Html.TextBoxFor(m => m.SMSContent, new { @class = "dxeEditArea_Metropolis dxeEditAreaSys fullLineTextbox" })
                                            @Html.ValidationMessageFor(model => model.SMSContent)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Actived, new { @class = "col-md-2 col-sm-2 col-xs-12 control-label" })
                        <div class="col-md-10 col-sm-10 col-xs-12 control-label text-left">
                            <label>
                                @Html.CheckBox("Actived")
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @Html.Partial("_CreateList", (List<SMSParameterViewModel>)ViewBag.SMsParameterList)
    <div class="form-horizontal text-right">
        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default custom-button btn-default minw100" })
        <button id="btnSave" type="submit" class="btn btn-default custom-button btn-warning minw100">Lưu</button>
    </div>
    <div class="loading-modal"></div>
</div>
@section Scripts {
    <script src="~/Scripts/CRMSMSTemplate/Share.js"></script>
    <script src="~/Scripts/CRMSMSTemplate/Edit.js"></script>
}


