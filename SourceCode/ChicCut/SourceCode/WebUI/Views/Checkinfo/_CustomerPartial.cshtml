@model CustomerModel
@if (Model != null)
{
    <div class="form-horizontal">
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="form-group">
            @Html.LabelFor(model => model.FullName, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.FullName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-98 col-sm-8 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.Phone)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.Address)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BirthDay, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.BirthDay)
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="form-group row">
            @Html.LabelFor(model => model.Gender, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @if (@Model != null)
                {
                    if (@Model.Gender == true)
                    {
                    <span>Nam</span>
                    }
                    else
                    {
                    <span>Nữ</span>
                    }

                }

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProvinceId, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.ProvinceModel.ProvinceName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DistrictId, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-98 col-xs-12 control-label text-left">
                @Html.DisplayFor(m => m.DistrictModel.DistrictName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CustomerLevelId, new { @class = "col-md-4 col-sm-4 col-xs-12 control-label" })
            <div class="col-md-8 col-sm-8 col-xs-12 control-label text-left">
                @if (Model.CustomerLevelId.HasValue)
                {
                  @Html.DisplayFor(m => m.CustomerLevelModel.CustomerLevelName)
                }
            </div>
        </div>

    </div>
</div>
<input type="hidden" name="CustomerId" id="CustomerId" value="@Model.CustomerId" />
}

