@model IEnumerable<EntityModels.CustomerLevelModel>

@{
    ViewBag.Title = "Cấp độ khách hàng";
}
<hr class="custom">
<div class="row head">
    <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">@ViewBag.Title</h4></div>
</div>
<hr class="custom">
<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead>
        <tr class="warning">
        <th class="text-center">
                TT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerLevelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinimumPurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actived)
        </th>
        <th class="actions text-center">@Resources.LanguageResource.Actions</th>
    </tr>
</thead>
 <tbody>
     @{ int i = 0;}
     @foreach (var item in Model) {
     i++;
     <tr>
        <td class="text-center">
                    @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerLevelName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.MinimumPurchase)
        </td>
         <td class="text-center">
            @if (item.Actived == true)
            {
                <i class="glyphicon glyphicon-ok"></i>
            }
            else
            {
                <i class="glyphicon glyphicon-remove"></i>
            }
        </td>
        <td class="text-center">
            @Html.ActionLink("Xem", "Details", new { id = item.CustomerLevelId }, new { @class = "btn btn-default btn-sm" })
            @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerLevelId}, new { @class = "btn btn-default btn-warning btn-sm" })
        </td>
    </tr>
    }
 </tbody>
</table>
<p class="text-right has-btn-add-new" style="margin-top: 4px;">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default btn-warning" })
</p>

