<!--Alert_Popup_Edit_Payment_Method-->
<div class="modal fade" id="editPaymentMethod" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-center" id="myModalLabel">Sửa phương thức thanh toán</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="control-label">
                        <p><label style="margin-left: 50px;">Số Bill: </label> @ViewBag.OrderId</p>
                        <input type="hidden" value="@ViewBag.OrderId" id="OrderIdEdit">
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-5 col-sm-5 col-xs-12" style="height: 28px">
                        <label style="margin-left: 50px; vertical-align: middle">Phương thức thanh toán: </label>
                    </div>
                    <div class="control-label col-md-7 col-sm-7 col-xs-12">
                        @Html.DropDownList("PaymentMethodId", null, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning btn-save">Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
