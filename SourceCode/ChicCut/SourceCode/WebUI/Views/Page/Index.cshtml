@model IEnumerable<EntityModels.PageModel>
@{
    ViewBag.Title = "Quản lý trang";
}

<hr class="custom">
<div class="row head">
    <div class="col-md-3 col-sm-12 col-xs-12"><h4 style="color:#6BABDF;">@ViewBag.Title</h4></div>
</div>
<hr class="custom">
<table class="table table-hover dataTable table-bordered table-striped no-footer" >
    <thead>
        <tr class="warning">
            <th class="text-center">
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuModel.MenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actived)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var item in Model) {
            i++;
    <tr>
        <td class="text-center">
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MenuModel.MenuName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderBy)
        </td>
        <td>
            @if (item.Actived == true)
            {
                <i class="glyphicon glyphicon-ok"></i>
            }
            else
            {
                <i class="glyphicon glyphicon-remove"></i>
            }
        </td>
        <td>
            @Html.ActionLink("Xem", "Details", new { id = item.PageId }, new { @class="btn btn-default col-sm"})
            @Html.ActionLink("Sửa", "Edit", new { id = item.PageId }, new { @class="btn btn-warning col-sm"})
        </td>
    </tr>
}
    </tbody>
</table>
<p class="text-right has-btn-add-new" style="margin-top: 4px;">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default btn-warning" })
</p>