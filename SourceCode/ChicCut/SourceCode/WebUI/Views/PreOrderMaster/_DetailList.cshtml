@model List<PreOrderDetailModel>
<form id="frmList" action="Save" method="post">
     <input type="hidden"   name="TotalQty" id="ViewBagTotalQty"/>
     <input type="hidden"   name="TotalPrice" id="ViewBagTotalPrice"/>
    <input type="hidden"   name="TotalShippingWeight" id="ViewBagTotalShippingWeight"/>
    <div class="form-horizontal">
        <table id="tblImportDetail" class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="warning">
                    <th style="width:40px" class="text-center">STT</th>
                    <th style="width:150px">Sản phẩm</th>
                    <th style="width:110px">Giá</th>
                    <th style="width:100px">Số lượng</th>
                    <th style="width:130px">Thành tiền</th>
                     <th style="width:100px">Số khung</th>
                </tr>
            </thead>
            <tbody>
               
                @{
                    int i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    string unitPrice = item.UnitPrice == null ? "0" : item.UnitPrice.Value.ToString("n0");
                    string Quantity = item.Quantity.HasValue ? item.Quantity.Value.ToString("n0") : "0";
                    string Price = item.Price == null ? "0" : item.Price.Value.ToString("n0");
                    <tr>
                        <td style="width: 40px" class="text-center">
                            @i
                        <td style="width: 150px">
                           @Html.DisplayFor(m => item.ProductModel.ProductName)
                        </td>
                        <td style="width: 100px" class="text-right">
                             @Price
                        </td>
                        <td style="width: 100px;" class="text-right">
                            @Quantity
                        </td>
                        
                        <td style="width: 100px" class="text-right">
                            @unitPrice
                        </td>
                        <td style="width: 100px;" class="text-right">
                            @item.Note
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <td class="text-right" colspan="4"><strong>Tổng cộng:</strong></td>
                    <td class="text-right" id="TotalPrice" >
                        <strong>@ViewBag.SumPrice.ToString("n0") </strong>
                    </td>
                    <td></td>
                </tr>
                 <tr>
                    <td class="text-right" colspan="4"><strong>Giảm giá:</strong></td>
                    <td class="text-right"  >
                        <strong>@ViewBag.BillDiscount</strong>
                    </td>
                     <td></td>
                </tr>
                 <tr>
                    <td class="text-right" colspan="4"><strong>VAT(%):</strong></td> 
                    <td class="text-right"  >
                        <strong>@ViewBag.BillVAT</strong>
                    </td>
                     <td></td>
                </tr>
                 <tr>
                    <td class="text-right" colspan="4"><strong>Tổng cộng thành tiền:</strong></td> 
                    <td class="text-right"  >
                        <strong>@ViewBag.TotalPrice</strong>
                    </td>
                     <td></td>
                </tr>
                 <tr>
                    <td class="text-right" colspan="4"><strong>Phương thức thanh toán:</strong></td> 
                    <td class="text-right"  >
                        <strong>@ViewBag.PaymentMethod</strong>
                    </td>
                     <td></td>
                </tr>
                 <tr>
                    <td class="text-right" colspan="4"><strong>Số tiền khách trả:</strong></td> 
                    <td class="text-right"  >
                         <strong>@ViewBag.GuestAmountPaid.ToString("n0")</strong>
                    </td>
                     <td></td>
                </tr>
                 <tr>
                    <td class="text-right" colspan="4"><strong>Số tiền còn lại:</strong></td> 
                    <td class="text-right"  >
                        <strong>@ViewBag.RemainingAmount.ToString("n0")</strong>
                    </td>
                     <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
</form>
