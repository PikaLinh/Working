@model Website_SettingModel


<div>
    @Html.ActionLink(" ", "Index", null, new { @class = "back", @title = "Quay lại trang trước." })
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <fieldset>
        <legend>Thêm một cài đặt mới</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SettingName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SettingName)
            @Html.ValidationMessageFor(model => model.SettingName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Details)
        </div>

        <div class="editor-field has-ck">
            @Html.TextAreaFor(model => model.Details, new { @id = "ckeContent", @css = "ckeditor" })
        <script type="text/javascript">
            CKEDITOR.replace("ckeContent");
        </script>
        @Html.ValidationMessageFor(model => model.Details)
        @Html.ValidationMessageFor(model => model.Details)
    </div>

        <div class="editor-label">
        </div>
        <div class="editor-field">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
