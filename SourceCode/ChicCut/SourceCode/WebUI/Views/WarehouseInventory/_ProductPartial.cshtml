@model IEnumerable<ProductInfoViewModel>

<table class="table table-bordered table-striped table-hover dataTable no-footer" id="dataTable1">
    <thead>
        <tr class="warning">
        <th class="text-center" style="width:10%">
                STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specifications)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImportPrice)
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Tồn hệ thống
        </th>

         @*<th>
            @Html.DisplayNameFor(model => model.Price3)
        </th>
        <th>
            Vip-B.Kim
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginOfProduct)
        </th>*@
    </tr>
</thead>
 <tbody>
     @if(Model != null)
     {
         int i = 0;
         foreach (var item in @Model) 
         {
             i++;
             <tr>
                <td class="text-center">
                   @i
                </td>
                <td style="width: 40%;">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                 <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Specifications)
                 </td>
                 <td class="text-right">
                     @Html.DisplayFor(modelItem => item.ImportPrice)
                 </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Price1)
                </td>
                 <td class="text-right">
                     @Html.DisplayFor(modelItem => item.Inventory)
                 </td>

                @*<td class="text-right">
                    @Html.DisplayFor(modelItem => item.Price2)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Price3)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Price4)
                </td>
                <td style="width: 20%;">
                    @Html.DisplayFor(modelItem => item.OriginOfProduct)
                </td>*@
            </tr>
        };
     }
 </tbody>
</table>
